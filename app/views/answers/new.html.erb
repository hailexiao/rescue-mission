<h1>New Answer</h1>

<p>
  <strong><%= @question.title %></strong>
</p>

<p>
  <%= @question.body %>
</p>

<%= form_for [@question, @answer] do |f| %>
  <p>
    <%= f.label :body, value: "Response" %><br>
    <%= f.text_area :body, size: "30x5", minlength: 50 %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
